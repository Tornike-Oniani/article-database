<UserControl x:Class="MainLib.Views.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MainLib.Views"
             xmlns:converters="clr-namespace:Lib.Views.Converters;assembly=Lib.Views"
             xmlns:type="clr-namespace:MainLib.ViewModels.Main;assembly=MainLib.ViewModels"
             xmlns:usercontrols="clr-namespace:Lib.Views.UserControls;assembly=Lib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <Grid>
        <!-- Working overlay -->
        <!-- Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}" -->
        <Grid Visibility="Collapsed"
              Panel.ZIndex="1">
            <Rectangle Fill="#ffffff"
                       Opacity="0.7" />
            <Border BorderThickness="0 0 0 3"
                    BorderBrush="{StaticResource PrimaryColorBrush}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="10">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <usercontrols:LoadingControl Diameter="50"
                                                 Color1="{StaticResource PrimaryColor}"
                                                 Color2="Transparent" />
                    <Label Content="Working..." 
                           FontSize="18" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="5 0 0 0" />
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Navigation column -->
                <ColumnDefinition Width="Auto" />
                <!-- Content column -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Style="{StaticResource NavigationWrapper}" 
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <!-- Logo row -->
                    <RowDefinition Height="70px" />
                    <!-- Menu title row -->
                    <RowDefinition Height="Auto" />
                    <!-- Navigation list row -->
                    <RowDefinition Height="*" />
                    <!-- Configuration title row -->
                    <RowDefinition Height="Auto" />
                    <!-- Configuration row -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal"
                            Margin="30 0 0 0"
                            Grid.Row="0">
                    <Image Source="/Lib.Styles;component/Images/logo.png" 
                           Width="27px"
                           RenderOptions.BitmapScalingMode="Fant" />
                    <TextBlock Text="{Binding User.Username, FallbackValue=dummy}"
                               Foreground="{StaticResource ColorBlackBrush}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="10 0 0 0" />
                </StackPanel>
                

                <!-- Navigation -->
                <TextBlock Text="Menu"
                           Foreground="{StaticResource ColorBlackBrush}"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="30 0 0 5"
                           Grid.Row="1" />
                
                <StackPanel Grid.Row="2">
                    <!-- Home -->
                    <RadioButton Style="{StaticResource NavigationButton}"
                                 Content="Home" 
                                 Tag="{x:Static materialDesign:PackIconKind.Home}" 
                                 GroupName="Navigation" 
                                 IsChecked="True" 
                                 Command="{Binding UpdateViewCommand}" 
                                 CommandParameter="{x:Static type:ViewType.Home}" />
                    <!-- Data entry -->
                    <RadioButton Style="{StaticResource NavigationButton}" 
                                 IsEnabled="{Binding User.IsAdmin}"
                                 Content="Data Entry" 
                                 Tag="{x:Static materialDesign:PackIconKind.FilePlus}" 
                                 GroupName="Navigation" 
                                 Command="{Binding UpdateViewCommand}" 
                                 CommandParameter="{x:Static type:ViewType.DataEntry}" />
                    <!-- Data search -->
                    <RadioButton Style="{StaticResource NavigationButton}" 
                                 Content="Data Search" 
                                 Tag="{x:Static materialDesign:PackIconKind.Search}" 
                                 GroupName="Navigation" 
                                 Command="{Binding UpdateViewCommand}" 
                                 CommandParameter="{x:Static type:ViewType.DataView}" 
                                 Click="RadioButton_Click" />
                    <!-- Bookmark manager -->
                    <RadioButton Style="{StaticResource NavigationButton}"
                                 Content="Bookmarks"
                                 Tag="{x:Static materialDesign:PackIconKind.Bookmark}"
                                 GroupName="Navigation"
                                 Command="{Binding UpdateViewCommand}" 
                                 CommandParameter="{x:Static type:ViewType.Bookmarks}" />
                    <!-- Reference manager -->
                    <RadioButton Style="{StaticResource NavigationButton}"
                                 Content="References"
                                 Tag="{x:Static materialDesign:PackIconKind.ArrowCollapse}"
                                 GroupName="Navigation"
                                 Command="{Binding UpdateViewCommand}" 
                                 CommandParameter="{x:Static type:ViewType.References}" />
                </StackPanel>


                <!-- Configuration -->
                <TextBlock Text="Config"
                           Foreground="{StaticResource ColorBlackBrush}"
                           FontWeight="SemiBold"
                           FontSize="16"
                           Margin="30 0 0 5"
                           Grid.Row="3" />
                <Button Style="{x:Null}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Cursor="Hand"
                        Margin="30 5 0 14"
                        Command="{Binding OpenSettingsCommand}"
                        Grid.Row="4">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Gear"
                                                         Width="25"
                                                         Height="25"
                                                         Foreground="{StaticResource ColorGrayBrush}" />
                                <TextBlock Text="Settings"
                                           Foreground="{StaticResource ColorGrayBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="16"
                                           Margin="5 0 0 0"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Right border -->
                <Border BorderThickness="0 0 1 0"
                        BorderBrush="{StaticResource ColorGrayBrush}"
                        Grid.Row="0"
                        Grid.RowSpan="5" />
            </Grid>


            <!-- Content -->
            <ContentControl Content="{Binding SelectedViewModel}" Grid.Column="1" />

        </Grid>
    </Grid>
</UserControl>
