<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Lib.Styles">


    <!-- Primary color -->
    <Color x:Key="PrimaryColor">#3094C0</Color>
    <SolidColorBrush x:Key="PrimaryColorBrush" Color="{StaticResource PrimaryColor}" />

    <!-- Secondary color -->
    <Color x:Key="SecondaryColor">#0575AC</Color>
    <SolidColorBrush x:Key="SecondaryColorBrush" Color="{StaticResource SecondaryColor}" />

    <!-- Light highlight color -->
    <Color x:Key="LightHighlightColor">#e5f3fb</Color>
    <SolidColorBrush x:Key="LightHighlightColorBrush" Color="{StaticResource LightHighlightColor}" />
    
    <!-- Light selection color -->
    <Color x:Key="LightSelectionColor">#cbe8f6</Color>
    <SolidColorBrush x:Key="LightSelectionColorBrush" Color="{StaticResource LightSelectionColor}" />

    <!-- Control text color -->
    <Color x:Key="ControlColor">#ffffff</Color>
    <SolidColorBrush x:Key="ControlColorBrush" Color="{StaticResource ControlColor}" />

</ResourceDictionary>