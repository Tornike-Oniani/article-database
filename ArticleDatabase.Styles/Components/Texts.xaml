<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Lib.Styles">

    <FontFamily x:Key="SourceSans">../fonts/#Source Sans Pro</FontFamily>
    <FontFamily x:Key="MotivaSansLight">../fonts/#Motiva Sans Light</FontFamily>
    <FontFamily x:Key="MotivaSansThin">../fonts/#Motiva Sans Thin</FontFamily>
    <FontFamily x:Key="MotivaSans">../fonts/#Motiva Sans</FontFamily>
    <FontFamily x:Key="MotivaSansMedium">../fonts/#Motiva Sans Medium</FontFamily>

    <!-- Window header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="WindowHeader">
        <Setter Property="Foreground" Value="{DynamicResource shadcn_foreground_brush}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 0 0 0" />
    </Style>
    
    <!-- Generic window header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="GenericWindowHeader" BasedOn="{StaticResource WindowHeader}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColorBrush}" />
    </Style>

</ResourceDictionary>