<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Lib.Styles">

    <!-- Window header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="WindowHeader">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColorNewBrush}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 0 0 0" />
    </Style>
    
    <!-- Generic window header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="GenericWindowHeader" BasedOn="{StaticResource WindowHeader}">
        <Setter Property="Foreground" Value="{StaticResource PrimaryColorBrush}" />
    </Style>
    
    <!-- Generic header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="Header">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{StaticResource LabelColorBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

</ResourceDictionary>