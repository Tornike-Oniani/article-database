<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:Lib.Styles">
    <!-- Navigation wrapper -->
    <!--             <Setter.Value>
                <LinearGradientBrush StartPoint="0 1" EndPoint="1 0">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="{StaticResource PrimaryColorNewDark}" />
                        <GradientStop Offset="1" Color="{StaticResource PrimaryColorNew}" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value> -->
    <Style  x:Key="NavigationWrapper" TargetType="{x:Type Grid}">
        <Setter Property="Width" Value="200" />
        <Setter Property="Background" Value="#ffffff" />
    </Style>

    <!-- RadioButton as TabItem -->
    <!-- Removes button and leaves only TextBlock when clicked its Background is set to blue and Text to white -->
    <Style x:Key="NavigationButton" TargetType="{x:Type RadioButton}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Foreground" Value="{StaticResource ColorGrayBrush}" />
        <Setter Property="Background" Value="#ffffff" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <!-- Body -->
                    <Border x:Name="wrapper" Padding="30 10 0 10" Background="{TemplateBinding Background}">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <materialDesign:PackIcon Kind="{TemplateBinding Tag}"
                                                     Foreground="{TemplateBinding Foreground}"
                                                     Height="30"
                                                     Width="30"
                                                     VerticalAlignment="Center" 
                                                     Margin="0 0 8 0"/>
                            <TextBlock Text="{TemplateBinding Content}" 
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <!-- Triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource ColorRedBrush}" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource ColorRedBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RadioButton as TabItem Home -->
    <!-- Home RadioButton replaces it with One picture and Textblock -->
    <Style x:Key="RadioButtonHome" TargetType="{x:Type RadioButton}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Margin" Value="0 0 0 50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border x:Name="wrapper" Padding="12 7 2 7" Background="Transparent">
                        <!-- Body -->
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Lib.Styles;component/Images/Logo.png" 
                                   RenderOptions.BitmapScalingMode="Fant" 
                                   Width="45" 
                                   Height="40" />
                            <TextBlock x:Name="tbMain" 
                                       Text="Home" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="#ffffff" 
                                       VerticalAlignment="Center" 
                                       Margin="10 0 0 0" />
                        </StackPanel>
                    </Border>

                    <!-- Triggers -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="wrapper" Property="Background" Value="#015e8d" />
                            <Setter TargetName="tbMain" Property="Foreground" Value="#ffffff" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="wrapper" Property="Background" Value="#015e8d" />
                            <Setter TargetName="tbMain" Property="Foreground" Value="#ffffff" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>