            </Setter.Value>
        </Setter>
    </Style>

    <!-- Generic window -->
    <Style x:Key="GenericWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <!-- Outer border with a drop shadow margin -->
                    <Border Padding="10">

                        <!-- Main window outline-->
                        <Grid>

                            <!-- Window with border and drop shadow -->
                            <Border Background="White">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" Opacity="1" />
                                </Border.Effect>
                            </Border>

                            <!-- Main window content -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!-- Title bar -->
                                    <RowDefinition Height="40" />
                                    <!-- Drop shadow-->
                                    <RowDefinition Height="Auto" />
                                    <!-- Window Content -->
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Title bar -->
                                <Border BorderThickness="0 0 0 1" BorderBrush="Gray" Grid.Row="0">
                                    <Grid Panel.ZIndex="1">
                                        <Grid.ColumnDefinitions>
                                            <!-- Title -->
                                            <ColumnDefinition Width="Auto" />
                                            <!-- Space -->
