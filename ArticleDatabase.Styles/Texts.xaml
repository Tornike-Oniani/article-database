<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ArticleDatabase.Styles">

    <!-- Window title -->
    <Style TargetType="{x:Type TextBlock}" x:Key="WindowHeader">
        <Setter Property="Foreground" Value="{StaticResource ControlColorBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="5 0 0 0" />
    </Style>
    
    <!-- Generic header -->
    <Style TargetType="{x:Type TextBlock}" x:Key="Header">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

</ResourceDictionary>