<Window x:Class="ArticleDatabase.Views.Progress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArticleDatabase.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Title}" Height="Auto" Width="300" SizeToContent="Height">
    <Border Padding="5">
        <StackPanel>
            <!-- Progress label -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
                <TextBlock Text="Progress: " />
                <TextBlock Text="{Binding ProgressPercent, FallbackValue=20}" />
                <TextBlock Text="%" />
            </StackPanel>
            <!-- Progress bar -->
            <ProgressBar Value="{Binding ProgressPercent}" Maximum="100" Height="20"/>
        </StackPanel>
    </Border>
</Window>
